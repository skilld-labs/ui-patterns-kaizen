{%
  set classes = [
    'a-button',
    modifier is iterable ? modifier|safe_join(' ') : modifier,
    extra_classes,
  ]
%}
<{{ tag|default('button') }}{{ attributes.addClass(classes) }}>
  {{ content }}
  {% block icon %}
    {% if icon %}
      {{ icon }}
    {% endif %}
  {% endblock %}
</{{ tag|default('button') }}>
