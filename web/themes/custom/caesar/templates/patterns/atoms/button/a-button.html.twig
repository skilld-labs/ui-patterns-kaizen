{%
  set classes = [
    'a-button',
    modifier is iterable ? modifier|safe_join(' ') : modifier,
    extra_classes,
  ]
%}
<{{ tag|default('button') }}{{ attributes.addClass(classes) }}>
  {{ content }}
  {% if svgSpritePath %}
    <svg>
      <use xlink:href="{{ svgSpritePath }}#svg-account-circle"></use>
    </svg>
  {% endif %}
</{{ tag|default('button') }}>
