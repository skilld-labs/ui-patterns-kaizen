{% set attributes = attributes.addClass('m-form-element', 'js-form-item', 'form-item') %}
{% if type %}
  {% if type|clean_class in ['radio', 'checkbox'] %}
    {% set attributes = attributes.addClass('m-form-element--label-inline') %}
  {% else %}
    {% set attributes = attributes.addClass('m-form-element--label-above') %}
  {% endif %}
  {% set attributes = attributes.addClass('js-form-type-' ~ type|clean_class) %}
{% endif %}
{% if name %}
  {% set attributes = attributes.addClass('form-item-' ~ name|clean_class, 'js-form-item-' ~ name|clean_class) %}
{% endif %}
{% if disabled == 'disabled' %}
  {% set attributes = attributes.addClass('form-disabled') %}
{% endif %}
{% if errors %}
  {% set attributes = attributes.addClass('form-item--error') %}
{% endif %}
<div{{ attributes }}>
  <div class="m-form-element__header">
    {% if label and label['#title_display'] not in ['invisible', 'none'] and type|clean_class not in ['checkbox', 'radio'] %}
      <div class="m-form-element__label">
        {{ label }}
      </div>
    {% endif %}
    {% if prefix is not empty %}
      <span class="m-form-element__prefix field-prefix">{{ prefix }}</span>
    {% endif %}
    <div class="m-form-element__children">
      {{ children }}
    </div>
    {% if suffix is not empty %}
      <span class="m-form-element__suffix field-suffix">{{ suffix }}</span>
    {% endif %}
    {% if label and type|clean_class in ['checkbox', 'radio'] %}
      <div class="m-form-element__label">
        {{ label }}
      </div>
    {% endif %}
  </div>
</div>
