    "@originjs/vite-plugin-content": "^1.0.2",
    "@storybook/addon-essentials": "^7.2.1",
    "@storybook/html": "^7.2.1",
    "@storybook/html-vite": "^7.2.1",
    "cli-real-favicon": "^0.0.8",
    "dedent": "^1.5.1",
    "drupal-attribute": "^1.0.2",
    "drupal-twig-extensions": "^1.0.0-beta.4",
    "magicast": "^0.2.10",
    "object-mapper": "^6.2.0",
    "oslllo-svg-fixer": "^2.2.0",
    "prepend-file-cli": "^1.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp-cli": "^4.1.1",
    "storybook": "^7.2.1",
    "svg-sprite": "^2.0.2",
    "svgo": "^3.0.2",
    "terser": "^5.17.1",
    "twig": "^1.15.4",
    "unplugin": "^1.4.0",
    "vite-plugin-twig-loader": "^0.0.6"
  },
  "dependencies": {
    "@drupal/once": "^1.0.1",
    "@splidejs/splide": "^4.1.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-yml": "^1.4.0",
    "glob": "^10.2.2",
    "open-props": "^1.5.8",
    "postcss": "^8.4.21",
    "postcss-custom-media": "^10.0.0",
    "postcss-custom-media-generator": "^1.1.0",
    "postcss-discard-empty": "^6.0.0",
    "postcss-header": "^3.0.3",
    "postcss-jit-props": "^1.0.13",
    "postcss-nested": "^6.0.1",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^3.0.0",
    "rollup-plugin-copy": "^3.4.0",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "vite": "^4.3.3",
    "yaml": "^2.2.2"
  },
  "scripts": {
    "build": "yarn build:theme && yarn bc",
    "build:theme": "yarn build:theme:css && yarn build:theme:js",
    "build:theme:css": "yarn vite build --config='vite.theme-css.config.js'",
    "build:theme:js": "yarn vite build --config='vite.theme-js.config.js'",
    "build:storybook": "storybook build",
    "bc": "yarn workspaces run vite build --config='../../../../vite.components-config.js'",
    "wc": "yarn workspaces run vite build --watch --config='../../../../vite.components-config.js'",
    "storybook": "storybook dev -p 6006",
    "lint": "stylelint \"**/*.css\" --config='./.stylelintrc' $FIX_FLAG && eslint --ext .yml . $FIX_FLAG && eslint --ext .js . $FIX_FLAG",
    "lint:fix": "FIX_FLAG=--fix yarn lint && yarn prettier",
    "prettier": "prettier --write \"./**/*.{css,js}\"",
    "favicon": "mkdir -p favicon && real-favicon generate favicon.config.json favicon.output.json favicon && rm favicon.output.json",
    "sprite": "yarn sprite:removeOld && yarn sprite:createTemp && yarn sprite:strokeToFill && yarn sprite:optimize && yarn sprite:create && yarn sprite:generateText && yarn sprite:removeTemp",
    "sprite:removeOld": "rm images/sprite.svg",
    "sprite:createTemp": "mkdir -p sprite-build-temp",
    "sprite:strokeToFill": "oslllo-svg-fixer -s images/svg -d sprite-build-temp",
    "sprite:optimize": "svgo -f sprite-build-temp -o sprite-build-temp",
    "sprite:create": "svg-sprite -s --svg-xmldecl=false --symbol-sprite='sprite.svg' --symbol-dest=images --shape-id-generator='svg-%s' sprite-build-temp/*.svg",
    "sprite:generateText": "prepend images/sprite.svg \"<!--\n    DO NOT EDIT THIS FILE\n    It's generated automatically by 'yarn sprite' command.\n    You have to re-generate 'sprite.svg' every time you\n    modifying icons in 'images/svg/' folder\n    @preserve\n-->\n\"",
    "sprite:removeTemp": "rm -R sprite-build-temp",
    "image": "sharp"
  },
  "private": true,
  "workspaces": [
    "templates/patterns/**/*"
  ]
}
