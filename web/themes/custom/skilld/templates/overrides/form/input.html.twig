{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}
{% if attributes['type'] == 'checkbox' %}
  {% include '@eshopgen_base_theme/patterns/atoms/checkbox/a-checkbox.html.twig' %}
{% elseif attributes['type'] == 'radio' %}
  {% include '@eshopgen_base_theme/patterns/atoms/radio/a-radio.html.twig' %}
{% elseif attributes['type'] == 'submit' %}
  {% include '@eshopgen_base_theme/patterns/atoms/button/a-button.html.twig' with {
    content: attributes.value,
  } %}
{% elseif attributes['type'] == 'file' %}
  {% include '@eshopgen_base_theme/patterns/atoms/file/a-file.html.twig' %}
{% elseif attributes['type']|clean_class in ['text', 'email', 'tel', 'number', 'search', 'password', 'date', 'time'] %}
  {% include '@eshopgen_base_theme/patterns/atoms/text-field/a-text-field.html.twig' %}
{% else %}
  <input{{ attributes }} />{{ children }}
{% endif %}
